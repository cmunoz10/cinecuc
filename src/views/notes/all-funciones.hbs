<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          <h5>Titulo de la pelicula</h5>
          {{ title }} 
        </h4>
        <h5>Fecha de inicio</h5>
        <p>{{ feini }} </p>
        <h5>Fecha de finalizacion</h5>
        <p>{{ fefin }} </p>
        <h5>Lugar</h5>
        <p>{{ lugar }} </p>
        <h5>Direccion</h5>
        <p>{{ direccion }} </p>
        <h5>Cupos totales</h5>
        <p>{{ cupos }} </p>
        
        <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        <!-- DELETE REQUEST -->
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola, Bienvenido! {{user.name}}</h1>
      <p clsss="lead">Aun no tienes una funcion seleccionada</p>
      <a href="/notes/add" class="btn btn-success btn-block">Selecciona una! </a>
    </div>
  </div>
  {{/each}}
</div>