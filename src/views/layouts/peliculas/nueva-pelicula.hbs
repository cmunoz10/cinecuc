<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h5>Agregar una pelicula</h5>
    </div>
    <div class="card-body">
      <form action="/peliculas/nueva-pelicula" method="POST">
        <div class="form-group">
          <input type="search" name="nombre" class="form-control" placeholder="Nombre de la pelicula" autofocus/>
        </div>
        <div class="form-group">
          <p>Descripcion</p>
          <input type="date" name="descripcion" class="form-control" placeholder="Descripcion" autofocus/>
        </div>
        <div class="form-group">
          <p>Director</p>
          <input type="date" name="director" class="form-control" placeholder="Director" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="genero" class="form-control" placeholder="Genero" autofocus/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
