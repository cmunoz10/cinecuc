<div class="row">
  {{#each pelicula}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          <h5>Titulo de la pelicula</h5>
          {{ nombre }} 
        </h4>
        <h5>Descripcion</h5>
        <p>{{ descripcion}} </p>
        <h5>Director</h5>
        <p>{{ director }} </p>
        <h5>Genero</h5>
        <p>{{ genero }} </p>
        
        <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola, Bienvenido! {{user.name}}</h1>
      <p clsss="lead">Aun no tienes una pelicula creada </p>
      <a href="/peliculas/add" class="btn btn-success btn-block">Selecciona una! </a>
    </div>
  </div>
  {{/each}}
</div>